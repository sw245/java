
public class C0721_04 {
	public static void main(String[] args) {
		
		boolean power = true;
		char ch = 'A';
		char ch2 = '\u0061';	// >> 16진수>10진수: 16*6 + 1*1 = 97	// '역슬래시u' - 아스키코드 16진수 표현?
		char ch3 = 55;	// char - 숫자를 문자형으로 선언 시, 아스키 코드의 16진수 표현으로 자동 변환
		char tab = '\t';	// 탭 적용
		char enter = '\n';	// 줄바꿈 적용
		
		System.out.println("power : "+power);
		System.out.println("ch : "+ch);
		System.out.println("ch2 : "+ch2);
		System.out.println("ch3 : "+ch3);
		
		System.out.println("aaa"+ch3+"bbb");
		System.out.println("aaa"+tab+"bbb");
		System.out.println("aaa"+enter+"bbb");
		
		System.out.println("aaa\t\tbbb");
		
		byte b = 127;
		System.out.println("byte : "+b);
		
		int hex = 0x100;	// 16진수>10진수 : 16*16*1	// 0x~ - 16진수
		System.out.println("hex : "+hex);
		
		int oct = 0100;
		System.out.println("oct : "+oct);	// 0~ - 8진수
		
		
		long l = 10000000000L;
		float f = 3.14F;
		
	}
	
	
}
