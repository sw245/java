package ja0722;

public class C0722_04 {

	public static void main(String[] args) {
		/*
		double pi = 3.141592;	// 3.14만 나오도록 출력
		
		System.out.printf("%.2f",pi);
		System.out.println();
		
		double s_pi = (int)(pi * 100) / 100d;	// 314.1592
		System.out.println(s_pi);
		*/
		
		double p = 123.5468777;	// 소수점 4자리 남기고 절삭
		
		double p_4 = (int)(p * 10000) / 10000d;
		System.out.println(p_4);
		
		// in python - round(), floor(), ceil() - and also in Java
		
		double d = Math.floor(p);
		System.out.println(d);
		
		
		// 소수점 5자리까지 남기고 절삭
		double d_5 = Math.floor(p * 100000d)/100000d;
		System.out.println(d_5);
		
		// 소수점 5자리에서 반올림, 4자리까지 출력
		double num = Math.round(p*10000d)/10000d;
		System.out.println(num);
		
		// 소수점 셋째 자리에서 올림, 둘째 자리까지 출력
		double c_num = Math.ceil(p*100d)/100d;

	};

}
