package ja0722;

public class C0722_03 {

	public static void main(String[] args) {
		char c1 = 'a';
		System.out.println(c1);

		char c2 = 97;
		System.out.println(c2);
		
//		char c3 = c1 + (char)1;		// ???
		char c3 = (char)(c1 + 1);
		System.out.println(c3);
		
		char c4 = ++c3;			// 타입 변경 없이 char 증감 가능
		System.out.println(c4);
		
		
		int i = 'B' - 'A';
		System.out.println(i);
		
		int i2 = '5' - ';';
		System.out.println(i2);
		
		int i3 = '1' - '0';
		System.out.println(i3);
		
		int i4 = '3' - '0';		// char >> int	?
		System.out.print(i4);
		System.out.println();
		
		int n = 5;			// int >> String
		String s = n+"";
		System.out.println(s);
		
		String str_num = "345";
		String r = str_num + '0' ;
		System.out.println(r);
		
		
		
		
	}

}
